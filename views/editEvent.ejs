<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head'); %>

  <body>

    <%- include('./partials/header'); %>

      <%- include('./partials/sidebar'); %>

        <main id="main" class="main">

          <div class="pagetitle">
            <h1>Edit Event</h1>
            <nav>
              <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/FBLA/dashboard">Home</a></li>
                <li class="breadcrumb-item "><a href="/FBLA/events">Events</a></li>
                <li class="breadcrumb-item active">Edit Event</li>
              </ol>
            </nav>
          </div><!-- End Page Title -->

          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Edit Event</h5>

              <!-- Vertical Form -->
              <form class="row g-3" action="/FBLA/EditEvent" method="POST">
                <div class="col-12">
                  <label for="eventNameEdit" class="form-label">Event Name</label>
                  <div class="col-sm-10">
                    <select class="form-select" aria-label="Event selection" id="eventNameEdit" name="selectedId" required>
                      <option value="none" selected>(Select Event)</option>
                      <% for (let i = 0; i < schoolEvents.length; i++) { %>
                        <option value="<%= schoolEvents[i]._id %>"><%= schoolEvents[i].name %></option>
                      <% } %>
                    </select>
                  </div>
                </div>
                <div class="col-12">
                  <label for="pointsEdit" class="form-label">Points</label>
                  <input type="number" class="form-control" id="pointsEdit" name="pointsEdit" required>
                </div>
                <div class="col-12">
                  <label for="eventDate" class="form-label">Date</label>
                  <input type="date" class="form-control" id="eventDate" name="eventDate" required>
                </div>
                <div class="col-12">
                  <label for="eventDescriptionEdit" class="form-label">Description</label>
                  <textarea class="form-control" id="eventDescriptionEdit" name="description" rows="5" cols="30" required></textarea>
                </div>
                
                <div class="text-center">
                  <button type="submit" class="btn btn-primary">Submit</button>
                  <button type="reset" class="btn btn-secondary">Reset</button>
                </div>
              </form><!-- Vertical Form -->

            </div>
          </div>
          
        </main><!-- End #main -->

        <%- include('./partials/footer'); %>

  </body>

</html>