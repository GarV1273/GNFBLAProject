<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head'); %>

  <body>

    <%- include('./partials/header'); %>

      <%- include('./partials/sidebar'); %>

        <main id="main" class="main">

          <div class="pagetitle">
            <h1>Edit Event</h1>
            <nav>
              <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/FBLA/dashboard">Home</a></li>
                <li class="breadcrumb-item "><a href="/FBLA/events">Events</a></li>
                <li class="breadcrumb-item active">Edit Event</li>
              </ol>
            </nav>
          </div><!-- End Page Title -->

          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Edit Event</h5>

              <!-- Vertical Form -->
              <form class="row g-3">
                <div class="col-12">
                  <label for="eventNameEdit" class="form-label">Event Name</label>
                  <div class="col-sm-10">
                    <select class="form-select" aria-label="Event selection" id="eventNameEdit" name="eventNameEdit" required>
                      <option selected>(Select Event)</option>
                      <option value="1">Event1</option>
                      <option value="2">Event2</option>
                      <option value="3">Event3</option>
                    </select>
                  </div>
                </div>
                <div class="col-12">
                  <label for="pointsEdit" class="form-label">Points</label>
                  <input type="number" class="form-control" id="pointsEdit" name="pointsEdit" required>
                </div>
                <div class="col-12">
                  <label for="eventDate" class="form-label">Date</label>
                  <input type="date" class="form-control" id="eventDate" name="eventDate" required>
                </div>
                
                <div class="text-center">
                  <button type="submit" class="btn btn-primary">Submit</button>
                  <button type="reset" class="btn btn-secondary">Reset</button>
                </div>
              </form><!-- Vertical Form -->

            </div>
          </div>
          
        </main><!-- End #main -->

        <%- include('./partials/footer'); %>

  </body>

</html>