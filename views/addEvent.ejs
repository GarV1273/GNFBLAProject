<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head'); %>

  <body>

    <%- include('./partials/header'); %>

      <%- include('./partials/sidebar'); %>

        <main id="main" class="main">

          <div class="pagetitle">
            <h1>Add Event</h1>
            <nav>
              <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/FBLA/dashboard">Home</a></li>
                <li class="breadcrumb-item "><a href="/FBLA/events">Events</a></li>
                <li class="breadcrumb-item active">Add Event</li>
              </ol>
            </nav>
          </div><!-- End Page Title -->

          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Add Event</h5>

              <!-- Vertical Form -->
              <form class="row g-3" action="/FBLA/AddEvent" method="POST">
                <div class="col-12">
                  <label for="eventNameAdd" class="form-label">Event Name</label>
                  <input type="text" class="form-control" id="eventNameAdd" name="name" required>
                </div>
                <div class="col-12">
                  <label for="pointsAdd" class="form-label">Points</label>
                  <input type="number" class="form-control" id="pointsAdd" name="points" required>
                </div>
                <div class="col-12">
                  <label for="eventDateAdd" class="form-label">Date</label>
                  <input type="date" class="form-control" id="eventDateAdd" name="date" required>
                </div>
                <div class="col-12">
                  <label for="eventDescriptionAdd" class="form-label">Description</label>
                  <textarea class="form-control" id="eventDescriptionAdd" name="description" rows="5" cols="30" required></textarea>
                </div>
                
                <div class="text-center">
                  <button type="submit" class="btn btn-primary">Submit</button>
                  <button type="reset" class="btn btn-secondary">Reset</button>
                </div>
              </form><!-- Vertical Form -->

            </div>
          </div>
          
        </main><!-- End #main -->

        <%- include('./partials/footer'); %>

  </body>

</html>