<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head'); %>

  <body>

    <%- include('./partials/header'); %>

      <%- include('./partials/sidebar'); %>

        <main id="main" class="main">

          <div class="pagetitle">
            <h1>Points</h1>
            <nav>
              <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                <li class="breadcrumb-item active">Points</li>
              </ol>
            </nav>
          </div><!-- End Page Title -->

          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Award Points</h5>

              <!-- Vertical Form -->
              <form class="row g-3" action="/FBLA/AssignPoints" method="POST">
                <div class="col-12">
                  <label for="eventName" class="form-label">Event Name</label>
                  <div class="col-sm-10">
                    <select class="assignEventSelect form-select" aria-label="Event selection" id="eventName" name="name" required>
                      <option value="none" selected>(Select Event)</option>
                      <% for (let i = 0; i < schoolEvents.length; i++) { %>
                        <option value="<%= schoolEvents[i].name %>"><%= schoolEvents[i].name %></option>
                      <% } %>
                    </select>
                  </div>
                </div>
                <div class="col-12">
                  <label for="studentName" class="form-label">Student ID</label>
                  <select class="assignStudentSelect form-select" name="studentId">
                    <% for (let i = 0; i < schoolStudents.length; i++) { %>
                      <option value="<%= schoolStudents[i].studentId %>"><%= schoolStudents[i].firstName + " " + schoolStudents[i].lastName + " " + "(" + schoolStudents[i].studentId + ")" %></option>
                    <% } %>
                  </select>
                </div>
                
                <div class="text-center">
                  <button type="submit" class="btn btn-primary">Submit</button>
                  <button type="reset" class="btn btn-secondary">Reset</button>
                </div>
              </form><!-- Vertical Form -->

            </div>
          </div>
          
        </main><!-- End #main -->

        <%- include('./partials/footer'); %>
        <script>
          $(document).ready(function() {
              $('.assignStudentSelect').select2();
              $('.assignEventSelect').select2();
          });
        </script>

  </body>

</html>